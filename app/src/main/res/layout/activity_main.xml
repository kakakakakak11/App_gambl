<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@mipmap/back">

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/layout_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/mclaren"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Start"
            android:textColor="#EEEEEE"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_rules"

                android:layout_width="270dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_style"

                android:fontFamily="@font/mclaren"
                android:shadowColor="#FFD369"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="Rules"
                android:textColor="#EEEEEE"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/btn_back_menu"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="@drawable/back_manu"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_chevron_left_24"
                android:contentDescription="btn_back" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_dice"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_style"

            android:fontFamily="@font/mclaren"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Dice"
            android:textColor="#EEEEEE"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btn_exit"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_style"

            android:fontFamily="@font/mclaren"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Exit"
            android:textColor="#EEEEEE"
            android:textSize="30sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_manu"
        android:shadowColor="#FFD369"
        android:shadowDx="0"
        android:layout_margin="10dp"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_menu_24"
        android:contentDescription="back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/linear_wheel"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/back_manu"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/wheel"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/wheel"
            android:contentDescription="wheel" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imStars"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:src="@mipmap/resurs"
                android:contentDescription="value" />

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:fontFamily="@font/mclaren"
                android:shadowColor="#FFD369"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:textStyle="bold"
                android:text="1000"
                android:textSize="20dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/back_manu">
            <TextView
                android:id="@+id/score_bet_plus"
                android:layout_width="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/mclaren"
                android:shadowColor="#FFD369"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:text="+"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/score_bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/mclaren"
                android:shadowColor="#FFD369"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:text="0"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/score_bet_minus"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/mclaren"
                android:shadowColor="#FFD369"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:text="-"
                android:textSize="24dp" />
            <Button
                android:id="@+id/btn_start_wheel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_manu"
                android:fontFamily="@font/mclaren"
                android:shadowColor="#FFD369"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="Wheel"
                android:textColor="#EEEEEE"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/linear_wheel"
        app:layout_constraintEnd_toEndOf="@+id/linear_wheel"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/linear_wheel"
        app:layout_constraintTop_toTopOf="@+id/linear_wheel"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/st"
        android:contentDescription="arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>