<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameTrueActivity"
    android:background="@mipmap/back">
    <ImageView
        android:id="@+id/menu_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_manu"
        android:shadowColor="#FFD369"
        android:shadowDx="0"
        android:layout_margin="10dp"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_menu_24"
        android:contentDescription="back" />
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/layout_anim_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/mclaren"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:text="Back"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_rules_back"

                android:layout_width="270dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_style"

                android:fontFamily="@font/mclaren"
                android:shadowColor="#FFD369"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="Rules"
                android:textColor="#EEEEEE"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/btn_back_menu_two"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:background="@drawable/back_manu"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_chevron_left_24"
                android:contentDescription="btn1" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_exit_back"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_style"

            android:fontFamily="@font/mclaren"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Exit"
            android:textColor="#EEEEEE"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_game"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:background="@drawable/back_manu"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageViewDice"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@mipmap/dice1"
            android:contentDescription="dice" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_cart1"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@mipmap/koloda"
                    android:contentDescription="cart1" />

                <TextView
                    android:id="@+id/textCards1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="75dp"
                    android:rotation="180"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_cart2"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@mipmap/koloda"
                    android:contentDescription="cart2" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="75dp"
                    android:rotation="180"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_cart3"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@mipmap/koloda"
                    android:contentDescription="cart3" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="75dp"
                    android:rotation="180"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_cart4"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@mipmap/koloda"
                    android:contentDescription="cart4" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="75dp"
                    android:rotation="180"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_cart5"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@mipmap/koloda"
                    android:contentDescription="cart5" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textCards5_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="75dp"
                    android:rotation="180"
                    android:text="10"

                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="invisible"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:padding="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imStars"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@mipmap/resurs"
                    android:contentDescription="value" />

                <TextView
                    android:id="@+id/text_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:fontFamily="@font/mclaren"
                    android:shadowColor="#FFD369"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#EEEEEE"
                    android:textStyle="bold"
                    android:text="1000"
                    android:textSize="20dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/back_manu">
                <TextView
                    android:id="@+id/score_bet_plus"
                    android:layout_width="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/mclaren"
                    android:shadowColor="#FFD369"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#EEEEEE"
                    android:text="+"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/score_bet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/mclaren"
                    android:shadowColor="#FFD369"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:text="0"
                    android:textColor="#EEEEEE"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/score_bet_minus"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/mclaren"
                    android:shadowColor="#FFD369"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#EEEEEE"
                    android:text="-"
                    android:textSize="24dp" />
                <Button
                    android:id="@+id/btn_start_wheel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_manu"
                    android:fontFamily="@font/mclaren"
                    android:shadowColor="#FFD369"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:text="Roll"
                    android:textColor="#EEEEEE"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>