<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_manu">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:fontFamily="@font/mclaren"
            android:textSize="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="Wheel"
            android:shadowColor="#FFD369"
            android:layout_gravity="left"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:fontFamily="@font/mclaren"
            android:textSize="24dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"

                android:layout_height="50dp"
                android:background="#F18520"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you get gold, you win"
                android:shadowColor="#FFD369"
                android:layout_gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:fontFamily="@font/mclaren"
                android:textSize="22dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"

                android:layout_height="50dp"
                android:background="#580642"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you get black, you lose"
                android:shadowColor="#FFD369"
                android:layout_gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:fontFamily="@font/mclaren"
                android:textSize="22dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poker"
            android:layout_marginLeft="5dp"
            android:shadowColor="#FFD369"
            android:layout_gravity="left"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:fontFamily="@font/mclaren"
            android:textSize="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First, three cards are opened to you, after choosing the amount you are playing, you open the remaining two cards"
            android:layout_marginLeft="5dp"
            android:shadowColor="#FFD369"
            android:layout_gravity="left"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:fontFamily="@font/mclaren"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combinations of cards"
            android:layout_marginLeft="5dp"
            android:shadowColor="#FFD369"
            android:layout_gravity="center"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:fontFamily="@font/mclaren"
            android:textSize="22dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a1"
                android:contentDescription="cart_rules1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a4"
                android:contentDescription="cart_rules2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A pair of identical cards"
                android:shadowColor="#FFD369"
                android:layout_gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:fontFamily="@font/mclaren"
                android:textColor="#EEEEEE"
                android:textSize="22dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a1"
                android:contentDescription="cart_rules3" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a4"
                android:contentDescription="cart_rules4" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_v1"
                android:contentDescription="cart_rule5" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_v4"
                android:contentDescription="cart_rule6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Two pairs of cards"
                android:shadowColor="#FFD369"
                android:layout_gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:fontFamily="@font/mclaren"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:textSize="22dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a1"
                android:contentDescription="cart_rules7" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a4"
                android:contentDescription="cart_rule8" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a2"
                android:contentDescription="cart_rule9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Three cards"
                android:shadowColor="#FFD369"
                android:layout_gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:fontFamily="@font/mclaren"
                android:textSize="22dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_v1"
                android:contentDescription="cart_rules10" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_v4"
                android:contentDescription="cart_rules11" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a1"
                android:contentDescription="cart_rules12" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a4"
                android:contentDescription="cart_rules13" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a2"
                android:contentDescription="cart_rules14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full house"
                android:shadowColor="#FFD369"
                android:layout_gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="#EEEEEE"
                android:fontFamily="@font/mclaren"
                android:textSize="22dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a1"
                android:contentDescription="cart_rules15" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a4"
                android:contentDescription="cart_rules16" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a2"
                android:contentDescription="cart_rules17" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/asset_a3"
                android:contentDescription="cart_rules18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mclaren"
                android:shadowColor="#FFD369"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="Kare"
                android:textColor="#EEEEEE"
                android:textSize="22dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dice"
            android:layout_marginLeft="5dp"
            android:shadowColor="#FFD369"
            android:layout_gravity="center"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:fontFamily="@font/mclaren"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1..3 = Lose"
            android:layout_marginLeft="5dp"
            android:shadowColor="#FFD369"
            android:layout_gravity="left"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:fontFamily="@font/mclaren"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4..6 = Win"
            android:layout_marginLeft="5dp"
            android:shadowColor="#FFD369"
            android:layout_gravity="left"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:textStyle="bold"
            android:fontFamily="@font/mclaren"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/Gooo"
            android:layout_margin="10dp"
            android:background="@drawable/back_manu"
            android:textSize="24dp"
            android:fontFamily="@font/mclaren"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cornerRadius="30dp"
            android:text="Go!" />

    </LinearLayout>



</ScrollView>