<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="26dp"
        android:fontFamily="@font/mclaren"
        android:shadowColor="#FFD369"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#EEEEEE"
        android:layout_height="wrap_content"
        android:text="YOU FAILED TO MULTIPLY THE ACCOUNT!" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:fontFamily="@font/mclaren"
        android:shadowColor="#FFD369"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textColor="#EEEEEE"
        android:layout_height="wrap_content"
        android:text="Exit the game or continue with a score of 1000?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wwreYes"
            android:layout_margin="10dp"
            android:background="@drawable/back_manu"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/mclaren"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cornerRadius="30dp"
            android:text="Exit"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/WeNotWyr"
            android:layout_margin="10dp"
            android:background="@drawable/back_manu"
            android:textSize="24dp"
            android:fontFamily="@font/mclaren"
            android:shadowColor="#FFD369"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textColor="#EEEEEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cornerRadius="30dp"
            android:text="Next"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>